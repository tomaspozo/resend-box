{
  "name": "resend-box",
  "version": "0.1.0",
  "description": "Local Resend API mock and SMTP server with web UI for email testing",
  "type": "module",
  "bin": {
    "resend-box": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc && npm run build:ui",
    "build:ui": "cd ui && npm run build",
    "dev": "tsx watch src/cli.ts start",
    "dev:ui": "cd ui && npm run dev",
    "start": "node dist/cli.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "resend",
    "smtp",
    "email",
    "sandbox",
    "testing",
    "mock"
  ],
  "author": "Tom√°s Pozo",
  "license": "MIT",
  "dependencies": {
    "commander": "^12.0.0",
    "express": "^4.21.1",
    "mailparser": "^3.7.0",
    "nanoid": "^5.0.7",
    "smtp-server": "^3.15.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "@types/smtp-server": "^3.5.12",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
